@model blogger.Models.User;
@{
    ViewData["Title"] = "Login";
} 
<div class="container my-5">
    <div class="row">
     <div class="col-lg-4 mx-auto border border-success border-5">
         <h3 class=" text-success text-center">Login</h3>
         <form asp-action="Login">
             <div class=""
                 <label asp-for="EmailAdress" class="form-label"></label>
                 <input asp-for="EmailAdress" type="email" class="form-control" />
             </div>
                 <div class=""
                     <label asp-for="Password" class="form-label"></label>
                     <input asp-for="Password" type="password" class="form-control" />
                 </div>
                     <div class="d-grid col-lg-6 max-auto my-3">
                         <button type="submit" class="btn btn-success">Login</button>
                     </div>
         </form>
     </div>
    </div>
</div>