@model IEnumerable<blogger.Models.UserRole>;

@{
    ViewData["Title"] = "UserRoles";
}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-12 max-auto border border-success border-5">
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th colspan="3"><h1 class="text-success display-1 text-center">UserRoles</h1></th>
                    </tr>
                <thead>
                    <tr>
                        <th colspan="3">
                            <a class="btn btn-success text-decoration-none align-self-center" asp-action="AddUpdateRole">Create New</a>
                        </th>
                    </tr>
                </thead>
                <thead>
                    <tr>
                        <th class="text-center">Sr#</th>
                        <th class="text-center">Name</th>
                        <th class="text-center">Actions</th>
                    </tr>

                </thead>
                <tbody>
                    @{
                        int i = 0;
                        foreach(var item in Model)
                        {
                            <tr>
                            <td class="text-center">@Convert.ToInt32(++i)</td>
                            <td class="text-center">@item.Name</td>
                            <td class="text-center">
                            <a class="btn btn-success text-decoration-none"asp-controller="User" asp-action="AddUpdateRole" asp-route-Id="@item.Id">Edit</a>
                            <a class="btn btn-success text-decoration-none"asp-controller="User"asp-action="DeleteRole"asp-route-Id="@item.Id">Delet</a>
                            </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
