@model IEnumerable<blogger.Models.PostStatus>;
@{
    ViewData["Title"] = "PostStatuses";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-10 mx-auto border border-success border-5">

            <table class="table table-bordered mt-3">

                <thead>

                    <tr>
                        <th colspan="3"><h1 class="text-success display-1 text-center">Post Statuses</h1></th>
                    </tr>
                    <tr>

                        <th colspan="3">
                            <div class="text-center">
                                <a class="btn btn-success link-light display-6 text-decoration-none align-self-center" asp-action="AddUpdatePostStatus">Create New</a>
                            </div>
                        </th>

                    </tr>
                    <tr>
                        <th class="text-center">Sr#</th>
                        <th class="text-center">Name</th>
                        <th class="text-center">Actions</th>
                    </tr>

                </thead>

                <tbody>

                    @{
                        int i = 0;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@Convert.ToInt32(++i)</td>
                                <td class="text-center">@item.Name</td>
                                <td class="text-center">
                                    <a class="btn-sm btn-success text-decoration-none" asp-controller="Post" asp-action="AddUpdatePostStatus" asp-route-Id="@item.Id">Edit</a> |
                                    <a class="btn-sm btn-success text-decoration-none" asp-controller="Post" asp-action="DeletePostStatus" asp-route-Id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>

            </table>

        </div>
    </div>
</div>
